    <style>
        div {
            padding: 4px 0px;
        }

        body {
            background-color: #f3f3f3;
        }

        nav.navbar {
            background-color: #ffd400;
            font-size: 18px;
        }

        a.see:hover {
            background-color: dodgerblue;
            color: #ffffff;
        }

        li:hover {
            color: black;
            font-family: Arial;
        }

        a.home {
            font-size: 24px;
            font-weight: bold;
            font-family: 'Segoe UI';
            font-style: italic;
        }

        input.search {
            border: 1px solid rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            margin-bottom: 5px;
        }

        div.form_search {
            text-align: center;
            padding: 0px 20px;
        }

        h3.Ohwow {
            text-align: justify;
            color: #ff6a00;
            font-size: 25px;
            font-weight: bold;
            text-transform: uppercase;
            font-family: sans-serif;
        }

        span.shop {
            color: black;
        }

        .scroll-top-btn {
            position: fixed;
            bottom: 70px;
            right: 165px;
            display: none;
            border-radius: 15px;
        }

        .call {
            position: fixed;
            bottom: 30px;
            right: 10px;
            z-index: 999999;
            border-radius: 10px 10px;
        }
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            z-index: 1;
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
            opacity: 1;
        }
        .slider {
            position: relative;
            width: 100%;
            height: 400px;
            overflow: hidden;
        }

        .slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

            .slide.active {
                opacity: 1;
            }

        .controls {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1;
        }

        .prev,
        .next {
            display: inline-block;
            background-color: #333;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 14px;
            margin-right: 10px;
            cursor: pointer;
            padding-bottom: 50px;
        }

            .prev:hover,
            .next:hover {
                background-color: #555;
            }

        .controls button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            padding: 8px;
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
            border: none;
            cursor: pointer;
        }

        .prev {
            left: 0;
        }

        .next {
            right: 0;
        }

        .controls button:hover {
            background-color: rgba(0, 0, 0, 0.7);
        }

    </style>
</head>
<body>
    <header>
        <div class="slider">
            <img class="slide" src="~/images/carousel/02.jpg" alt="Image 2">
            <img class="slide" src="~/images/carousel/01.jpg" alt="Image 1">
            <img class="slide" src="~/images/carousel/03.jpg" alt="Image 3">
            <img class="slide" src="~/images/carousel/04.jpg" alt="Image 4">
            <div class="controls">
                <button class="prev"><i class="fas fa-chevron-left"></i></button>
                <button class="next"><i class="fas fa-chevron-right"></i></button>
            </div>
        </div>
        <div class="call">
            <button class="scroll-top-btn"><i class="bi bi-arrow-up-circle"></i></button>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
